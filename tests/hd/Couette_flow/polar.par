!setup.pl -d=2

 &filelist
   base_filename    = 'output/polar_aT_dT_'
   autoconvert      = T
   nwauxio          = 1
   convert_type     = 'vtuBCCmpi'
   saveprim         = F
   nocartesian      = T
   restart_from_file= 'output/polar_aT_dT_0005.dat'
   snapshotnext     = 6
 /

 &savelist
   itsave(1,1)      = 0
   itsave(1,2)      = 0
   ditsave_log      = 500
   !ditsave_dat       = 1 ! 1.d-1
/

 &stoplist
   !it_max = 1
   !time_max            = 2.d0
/

 &methodlist
   time_integrator     = 'fourstep'
   flux_scheme         = 13*'hll'
   limiter    = 13*'koren'
   angmomfix=T
/

 &boundlist
  typeboundary_min1 = 3*'special'
  typeboundary_max1 = 3*'special'
  typeboundary_min2 = 3*'periodic'
  typeboundary_max2 = 3*'periodic'
  internalboundary = T
  nghostcells = 3
/

 &meshlist
   !refine_criterion   = 3
   !refine_max_level   = 1
   block_nx1        = 16
   block_nx2        = 8
   domain_nx1         = 192
   domain_nx2         = 16
   stretched_grid   = T
   stretched_dim(1) = T
   xprobmin1       = 1.0d-1
   xprobmax1       = 20.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
 /

 &hd_list
  hd_energy = F
  hd_viscosity = T
 /

&vc_list
  !vc_mu = 0.2d0
  viscInDiv = T
/

&my_list
  Reynolds = 1.d1
  IC = 3
/

