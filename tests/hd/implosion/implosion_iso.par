
 &filelist
        primnames= 'rho v1 v2 tr'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuBCCmpi'
	filenameout='implosion_iso_'  ! Base file name for dat/vtu output
        filenamelog='implosion_iso'   ! Base file name for the log
/

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave(1)=0.01          ! For the log
        dtsave(2)=0.01          ! For dat/vtu output
 /

 &stoplist
        tmax=0.5d0              ! Stop after this time
        dtmin=1.0d-9            ! Stop when dt < dtmin
 /

 &methodlist
        wnames=       'rho m1 m2 Dtr'
        typeadvance=  'threestep'
        typefull1=13*'hllc'
        typelimiter1=13*'cada3'
 /

 &boundlist
        dixB=2
        typeB='symm' 'asymm' 'symm' 'symm'
        'symm' 'asymm' 'symm' 'symm'
        'symm' 'symm' 'asymm' 'symm'
        'symm' 'symm' 'asymm' 'symm'
 /

 &amrlist
        errorestimate=3
        mxnest = 2
        nxlone1=64
        nxlone2=64
        xprobmin1=0.
        xprobmax1=0.3
        xprobmin2=0.
        xprobmax2=0.3
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.9d0
        slowsteps=10
 /

 &hd_list
        hd_adiab = 1.4d0
 /

