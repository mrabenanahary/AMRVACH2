! setup.pl -d=3
 &filelist
	base_filename='bw_3d'
        autoconvert=.true.
        saveprim=.true.
        nwauxio=1
	convert_type='vtuBCCmpi'
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        ditsave_log=10
        dtsave_dat=0.05
 /

 &stoplist
        time_max=0.25d0
 /

 &methodlist
        time_integrator='threestep'
        flux_scheme=20*'hllc'
        limiter=20*'koren'
 /

 &boundlist
        typeboundary_min1=5*'cont'
        typeboundary_max1=5*'cont'
        typeboundary_min2=5*'pole'
        typeboundary_max2=5*'pole'
        typeboundary_min3=5*'periodic'
        typeboundary_max3=5*'periodic'
 / 

 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_refine_weight(1)=0.5
        w_refine_weight(5)=0.5
        block_nx1=8
        block_nx2=8
        block_nx3=8
        domain_nx1=16
        domain_nx2=32
        domain_nx3=64
        xprobmin1=1.d0
        xprobmax1=3.d0
        xprobmin2=0.d0
        xprobmax2=0.5d0
        xprobmin3=0.d0
        xprobmax3=1.d0
        stretched_grid=.true.
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.5d0
 /
