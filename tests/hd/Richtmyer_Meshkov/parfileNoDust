!setup.pl -d=22 -g=16,16 -p=hd

 &filelist
	filenamelog='logfile'
        primnames= 'rho v1 v2 p'
        saveprim=.true.
        autoconvert=.true.
	filenameout= './output/rm'
        filenameini= './output/rm'
	convert_type='vtuBCCmpi'
	!snapshotini=470
	!snapshotnext=471
	writew=.T.,3*.F.
	nwauxio=1
	convert=.false.
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
	ditsave(1)=20
        dtsave(2)=0.005d0
 /
        ditsave(1)=1

 &stoplist
        !dtmin=1.0d-6
        tmax=3.0d0
        !itmax=1
 /

 &methodlist
        wnames=       'rho m1 m2 e'
        fileheadout=  'hd22'
        typeadvance=  'ssprk54'
        typefull1=13*'tvdlf'
        typelimiter1='woodward'

 /

 &boundlist
        dixB=2
        typeB=4*'cont',
        'symm','asymm','symm','symm',
	'symm','symm','asymm','symm',
        'symm','symm','asymm','symm'
 /

 &amrlist
        errorestimate=3
        mxnest=7
	flags(5)=1
	flags(1)=1
	tol=13*0.05
	tolratio=13*0.125d0
        nxlone1=120
        nxlone2=24
        xprobmin1=0.0d0
        xprobmax1=5.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
        courantpar=1.5d0
 /
        slowsteps=10
