!setup.pl -d=2

 &filelist
        saveprim=.true.
        autoconvert=.true.
	convert_type='vtuBCCmpi'
        base_filename='wc_2d'  ! Base file name for dat/vtu output
        nwauxio=1
/

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=0.01          ! For the log
        dtsave_dat=0.02          ! For dat/vtu output
 /

 &stoplist
        dtmin=1.0d-6
        time_max=0.32d0
 /

 &methodlist
        time_integrator=  'ssprk54'
        flux_scheme=20*'fd'
        limiter=20*'mp5'

 /

 &boundlist
        typeboundary_min1 = 4*'special'
        typeboundary_max1 = 4*'cont'
        typeboundary_min2 = 4*'special'
        typeboundary_max2 = 4*'special'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=4
        w_refine_weight(1)=0.5d0
        w_refine_weight(2)=0.25d0
        w_refine_weight(3)=0.25d0
        block_nx1=6
        block_nx2=6
        domain_nx1=60
        domain_nx2=12
        xprobmin1=0.0d0
        xprobmax1=5.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.9d0
        slowsteps=15
 /
