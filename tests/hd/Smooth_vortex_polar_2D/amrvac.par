!setup.pl -d=2

 &filelist
        saveprim=T
        autoconvert=T
	convert_type='vtuBCCmpi'
        base_filename='Smoothvortex'  ! Base file name for dat/vtu output
        typefilelog='special'
/

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=0.05          ! For the log
        dtsave_dat=0.05          ! For dat/vtu output
 /

 &stoplist
        dtmin=1.0d-6
        time_max=10.0d0
 /

 &methodlist
        time_integrator=  'ssprk54'
        flux_scheme=20*'hll'
        limiter=20*'ppm'

 /

 &boundlist
        typeboundary_min1 = 4*'pole'
        typeboundary_max1 = 4*'cont'
        typeboundary_min2 = 4*'periodic'
        typeboundary_max2 = 4*'periodic'
 /

 &meshlist
        refine_max_level=1
        domain_nx1=260
        domain_nx2=260
        block_nx1=10
        block_nx2=10
        xprobmin1=0.0d0
        xprobmax1=5.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.5d0
 /

 &hd_list
        hd_n_tracer = 1
 /
