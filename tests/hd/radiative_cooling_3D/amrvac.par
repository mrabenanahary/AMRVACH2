
&filelist
  base_filename      = 'rc_3d'
  autoconvert      = T
  convert_type     = 'vtuBCCmpi'
  saveprim         = T
/

&savelist
   itsave(1,1)     = 0
   itsave(1,2)     = 0
   ditsave_log      = 1
   dtsave_dat       = 1.d-1
/

&stoplist
   time_max            = 5.d-1
/

&methodlist
   time_integrator     = 'threestep'
   flux_scheme       = 20*'hllc'
   limiter    = 20*'cada3'
/   
&boundlist
  typeboundary = 5*'cont', 5*'cont', 5*'cont', 5*'cont', 5*'cont', 5*'cont'
/
&meshlist
   refine_criterion   = 3
   refine_max_level          = 3
   block_nx1        = 4
   block_nx2        = 4
   block_nx3        = 4
   domain_nx1         = 8
   domain_nx2         = 8
   domain_nx3         = 8
   xprobmin1       =-1.0d0
   xprobmax1       = 1.0d0
   xprobmin2       =-1.0d0
   xprobmax2       = 1.0d0
   xprobmin3       =-1.0d0
   xprobmax3       = 1.0d0
 /
  
&paramlist
  slowsteps        = 10
  courantpar       = 0.6d0
  typecourant      = 'maxsum'
/

&hd_list
  hd_radiative_cooling=T
/
 
&rc_list
  ncool=4000
  coolcurve='JCcorona'
  coolmethod='exact'
  cfrac=1.d0
  Tfix=.true.
/ 
