 &filelist
        base_filename='burgers'
    	convert_type='vtuBCCmpi'
        autoconvert=T
/

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        ditsave_log=1
        dtsave_dat=0.1d0
 /

 &stoplist
        time_max=10.0d0
 /

 &methodlist
        time_integrator = 'threestep'
        flux_scheme = 20*'tvdlf'
        limiter=20*'cada3'
 /

 &boundlist
        typeboundary_min1 = 'periodic'
        typeboundary_max1 = 'periodic'
        typeboundary_min2 = 'periodic'
        typeboundary_max2 = 'periodic'
 /

 &meshlist
        refine_max_level=4
        refine_threshold=20*0.1d0
        block_nx1=10
        domain_nx1=60
        xprobmin1=0.0d0
        xprobmax1=5.0d0
        xprobmin2=0.0d0
        xprobmax2=5.0d0
 /

 &paramlist
       courantpar=0.4d0
 /

 &nonlinear_list
        kdv_source_term = F
 /
