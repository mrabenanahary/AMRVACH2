&filelist
        base_filename='bc_fromfiles_3d'
    	convert_type='vtuBCCmpi'
        autoconvert=T
/

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        ditsave_log=1
        ditsave_dat=10
 /

 &stoplist
        it_max=500
 /

 &methodlist
        time_integrator=  'ssprk54'
        flux_scheme =    20*'fd'
        limiter= 20*'mp5'
 /

 &boundlist
        typeboundary_min1 = 'special'
        typeboundary_max1 = 'noinflow'
        typeboundary_min2 = 'periodic'
        typeboundary_max2 = 'periodic'
        typeboundary_min3 = 'periodic'
        typeboundary_max3 = 'periodic'
 /
        typeboundary_min2 = 'cont'
        typeboundary_max2 = 'cont'
        typeboundary_min3 = 'cont'
        typeboundary_max3 = 'cont'

 &meshlist
        refine_max_level=4
        refine_threshold=20*0.1d0
        block_nx1=10
        block_nx2=4
        block_nx3=10
        domain_nx1=20
        domain_nx2=8
        domain_nx3=20
        xprobmin1=-0.5d0
        xprobmax1=0.5d0
        xprobmin2=-0.3d0
        xprobmax2=0.3d0
        xprobmin3=-0.5d0
        xprobmax3=0.5d0
 /

 &rho_list
        rho_v = 1.0, 0.0, 0.0
 /
