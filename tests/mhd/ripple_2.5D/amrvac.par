 &testlist
        teststr=''
 /

        level_io=1
 &filelist
        base_filename='rippleb'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuCCmpi'
        nwauxio=3
 /
        restart_from_file='ripple'
        snapshotnext=20
        convert=.true.

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave=0.01d0,0.01d0
 /

 &stoplist
        dtmin=1.D-6
        time_max=0.2d0
 /

 &methodlist
        time_integrator=  'threestep'
        flux_scheme=    20*'hll'
        limiter= 20*'koren'
        typelimited='predictor'
        dimsplit=.false.
 /

 &boundlist
        typeboundary_min1 = 8*'cont'
        typeboundary_max1 = 8*'cont'
        typeboundary_min2 = 8*'cont'
        typeboundary_max2 = 8*'cont'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        refine_threshold=20*0.2d0
        derefine_ratio=20*0.125d0
        w_refine_weight(1)=0.4d0
        w_refine_weight(2)=0.2d0
        w_refine_weight(3)=0.2d0
        w_refine_weight(4)=0.2d0
        block_nx1=8
        block_nx2=8
        domain_nx1=64
        domain_nx2=64
        iprob=1
        xprobmin1=-0.2d0
        xprobmax1=0.2d0
        xprobmin2=-0.2d0
        xprobmax2=0.2d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.6d0
 /
 &mhd_list
        typedivbfix='linde'
 /
