!=====================================================
! Project : Kelvin-Helmholtz problem
! Aim     : N.C.
! Results : 
! Update  : 
! configuration :
! -d=2
!=====================================================
 
 &filelist
        base_filename='kh_2d'
        convert_type='vtuBCCmpi'
        saveprim=.true.
        autoconvert=.true.
        nwauxio=1
 /
 
 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave=0.01d0,0.5d0
 /
 
 &stoplist
        time_max=8.d0
 /
 
 &methodlist
        time_integrator=  'threestep'
        flux_scheme=    20*'hll'
        limiter= 20*'cada3'
 /
 &boundlist
        typeboundary_min1 = 6*'periodic'
        typeboundary_max1 = 6*'periodic'
        typeboundary_min2 = 6*'periodic'
        typeboundary_max2 = 6*'periodic'
 /
 
 
 &meshlist
        refine_criterion=3
        w_refine_weight(1)=0.4d0
        w_refine_weight(2)=0.3d0
        w_refine_weight(3)=0.3d0
        refine_max_level=3
        refine_threshold=20*0.2d0
        domain_nx1=64
        domain_nx2=64
        xprobmin1=-1.d0
        xprobmax1=1.0d0
        xprobmin2=-1.d0
        xprobmax2=1.0d0
 /
 
 &paramlist
        typecourant='maxsum'
        slowsteps=10
        courantpar=0.8d0
 /
