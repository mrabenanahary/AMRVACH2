!setup.pl -d=2
 &filelist
        base_filename='bw_2d'
        typefilelog='regression_test'
        saveprim=.true.
        convert_type='vtuBCCmpi'
        autoconvert=.true.
        nwauxio=3
 /

 &savelist
        dtsave_log       = 1.d-3
 /

 &stoplist
        time_max            = 5.d-2
/

 &methodlist
        time_integrator=  'threestep'
        flux_scheme=    20*'hll'
        limiter= 20*'koren'
        small_pressure=1.0d-14
        small_density=1.0d-14
 /

 &boundlist
        typeboundary_min1=6*'cont'
        typeboundary_max1=6*'cont'
        typeboundary_min2=6*'cont'
        typeboundary_max2=6*'cont'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_refine_weight(1)=0.5d0
        w_refine_weight(4)=0.5d0
        refine_threshold=20*0.2d0
        block_nx1=16
        block_nx2=16
        domain_nx1=32
        domain_nx2=32
        iprob=1 
        xprobmin1=0.d0
        xprobmax1=2.d0
        xprobmin2=0.d0
        xprobmax2=2.d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.5d0
 /

 &mhd_list
        Busr=1.d0
 /
