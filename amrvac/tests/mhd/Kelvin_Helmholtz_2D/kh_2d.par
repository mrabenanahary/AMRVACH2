!=====================================================
! Project : Kelvin-Helmholtz problem
! Aim     : N.C.
! Results : 
! Update  : 
! configuration :
! -d=2
!=====================================================
 
 &filelist
        typefilelog='regression_test'
        base_filename='kh_2d'
        convert_type='vtuBCCmpi'
        saveprim=.true.
        autoconvert=.true.
        nwauxio=1
 /
 
 &savelist
   dtsave_log       = 1.d-3
/

 &stoplist
   time_max            = 5.d-2
/
 
 &methodlist
        time_integrator=  'threestep'
        flux_scheme=    20*'hll'
        limiter= 20*'cada3'
        typelimited ='predictor'
 /
 &boundlist
        typeboundary_min1 = 6*'periodic'
        typeboundary_max1 = 6*'periodic'
        typeboundary_min2 = 6*'cont'
        typeboundary_max2 = 6*'cont'
 /
 
 
 &meshlist
        refine_criterion=3
        w_refine_weight(1)=0.4d0
        w_refine_weight(2)=0.3d0
        w_refine_weight(3)=0.3d0
        refine_max_level=3
        refine_threshold=20*0.2d0
        block_nx1=12
        block_nx2=12
        domain_nx1=48
        domain_nx2=48
        xprobmin1=0
        xprobmax1=4.0d0
        xprobmin2=0
        xprobmax2=4.0d0
        iprob=2 
 /
 
 &paramlist
        typecourant='maxsum'
        slowsteps=10
        courantpar=0.8d0
 /
