!$AMRVAC_DIR/setup.pl -d=2

 &filelist
        base_filename='LS_2d'
        convert_type='vtuBCCmpi'
        saveprim=.true.
    	autoconvert=T
        nwauxio=1
 /
        typefilelog='regression'

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        ditsave_log=100
        dtsave_dat=0.1d0
 /

 &stoplist
        dtmin=1.d-6
        time_max=2.d0
 /

 &methodlist
        time_integrator=  'threestep'
        flux_scheme=    20*'hll'
        limiter= 20*'mp5'
        small_pressure=1.0d-14
        dimsplit=.false.
 /

 &boundlist
        typeboundary_min1= 6*'periodic'
        typeboundary_max1= 6*'periodic'
        typeboundary_min2= 6*'periodic'
        typeboundary_max2= 6*'periodic'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        refine_threshold=20*0.5d0
        domain_nx1=64
        domain_nx2=64
        iprob=7
        xprobmin1=0.0d0
        xprobmax1=1.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
        courantpar=0.5d0
        dtdiffpar=0.5d0
        slowsteps=10
 /
