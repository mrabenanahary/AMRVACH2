!setup.pl -d=3

&filelist
  base_filename    = 'tc_ring3d100a'
  autoconvert      = .true.
  convert_type     = 'vtuBmpi'
  saveprim         = .true.
/

 &savelist
   itsave(1,1) = 0
   itsave(1,2) = 0
   dtsave_log = 4.d-1
   dtsave_dat = 4.d0
/

 &stoplist
   time_max = 4.d2
/
   itmax=1

 &methodlist
   time_integrator     = 'onestep'
   flux_scheme       = 20*'nul'
   limiter    = 20*'minmod'
/
 &boundlist
  typeboundary_min1 = 8*'cont'
  typeboundary_max1 = 8*'cont'
  typeboundary_min2 = 8*'cont'
  typeboundary_max2 = 8*'cont'
  typeboundary_min3 = 8*'cont'
  typeboundary_max3 = 8*'cont'
/
 &meshlist
   refine_criterion = 3
   refine_max_level = 1
   block_nx1        = 10
   block_nx2        = 10
   block_nx3        = 10
   domain_nx1       = 100
   domain_nx2       = 100
   domain_nx3       = 100
   xprobmin1       =-1.0d0
   xprobmax1       = 1.0d0
   xprobmin2       =-1.0d0
   xprobmax2       = 1.0d0
   xprobmin3       =-1.0d0
   xprobmax3       = 1.0d0
 /

 &paramlist
 /
 &mhd_list
  mhd_thermal_conduction =T
  typedivbfix='none'
  Busr=1.d-5
 /
 &tc_list
  tc_perpendicular=.false.
  tc_saturate     =.false.
  tc_k_para = 0.01d0
 /
