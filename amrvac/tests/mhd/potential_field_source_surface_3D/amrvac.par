!$AMRVAC_DIR/setup.pl -d=3

 &filelist
        base_filename='pfssa'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuBmpi'
        nwauxio=3
 /  
        restart_from_file='.dat'

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        ditsave_log=1
 /
        dtsave_dat=2.d0
        ditsave_dat=100

 &stoplist
        dtmin=1.D-6
        itmax=1
 /
        time_max=60.d0

 &methodlist
        time_integrator='threestep'
        flux_scheme=20*'hll'
        limiter=20*'cada3'
        small_pressure=1.0d-14
        small_density=1.0d-14
 /

 &boundlist
        typeboundary_min1 = 7*'cont'
        typeboundary_max1 = 7*'cont'
        typeboundary_min2 = 7*'pole'
        typeboundary_max2 = 7*'pole'
        typeboundary_min3 = 7*'periodic'
        typeboundary_max3 = 7*'periodic'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=1
        refine_threshold=20*0.2d0
        derefine_ratio=20*0.1d0
        w_refine_weight(5)=0.4d0
        w_refine_weight(6)=0.3d0
        w_refine_weight(7)=0.3d0
        block_nx1=12
        block_nx2=12
        block_nx3=12
        domain_nx1=48
        domain_nx2=192
        domain_nx3=384
        xprobmin1=1.d0
        xprobmax1=2.5d0
        xprobmin2=0.d0
        xprobmax2=0.5d0
        xprobmin3=0.d0
        xprobmax3=1.d0
        ditregrid=2
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.8d0
 /

 &mhd_list
        mhd_gravity=.true.
        typedivbfix='linde'
        mhd_energy=.false.
        mhd_adiab=1.0d0
 /
