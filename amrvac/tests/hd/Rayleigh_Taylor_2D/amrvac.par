!setup.pl -d=2

 &filelist
   base_filename      = 'rthd_2d'
   autoconvert      = .true.
   convert_type     = 'vtuBCCmpi'
   saveprim         = .true.
 /

 &savelist
   dtsave_log       = 1.d-3
   dtsave_dat       = 1.d-1
/

 &stoplist
   time_max            = 2.d0
/

 &methodlist
   time_integrator     = 'threestep'
   flux_scheme       = 20*'hllc'
   limiter    = 20*'cada3'
/

 &boundlist
  typeboundary_min1 = 4*'periodic'
  typeboundary_max1 = 4*'periodic'
  typeboundary_min2 = 'symm','symm','asymm','symm'
  typeboundary_max2 = 'symm','symm','asymm','symm'
/
 &meshlist
   refine_criterion   = 3
   refine_max_level          = 5
   block_nx1        = 4
   block_nx2        = 4
   domain_nx1         = 8
   domain_nx2         = 8
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
 /

 &paramlist
  slowsteps        = 10
 /

 &hd_list
  hd_gravity = .true.
 /
