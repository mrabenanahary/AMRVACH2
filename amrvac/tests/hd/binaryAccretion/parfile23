        tmax=2.0
        dtmin=1.0d-25
 /

 &methodlist
        wnames='rho m1 m2 m3 e Dtr1'
        typeadvance=  'twostep'
        typefull1=13*'tvdlf'
        typelimiter1=2*'minmod',5*'woodward',6*'minmod'
