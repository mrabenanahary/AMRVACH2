 &filelist
        filenamelog='logfile'
        primnames='rho v1 v2 v3 p tr1'
        saveprim=.true.
        autoconvert=.true.
	convert_type='vtuBCCmpi'
	typeparIO=1
	filenameout= './output/accretion'
	filenameini= './output/accretion'
	nwauxio=3
 /
	snapshotini=40
	snapshotnext=41
 /
	writew=.T.,3*.F.,2*.T.,4*.F.
 /
	convert=.true.
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
