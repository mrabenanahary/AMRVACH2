	useprimitive=T
	loglimit(1)=.true.
	loglimit(5)=.true.

	fixsmall=.true.
 	strictsmall=.false.
	smallrho=1.0d-3
	smallp=1.0d-3
	!smallrhod=1.0d-7
 	strictgetaux=.true.
 	nflatgetaux=3

	tfix=.true.
	! started cooling values below at it=412
	ncool=10000
	coolmethod='exact'
	coolcurve='DM'
 /

 &boundlist
        dixB=2
	internalboundary=.true.
        typeB=24*'noinflow'
 /

 &amrlist
        errorestimate=0
        mxnest = 8
	tol=13*0.2d0
