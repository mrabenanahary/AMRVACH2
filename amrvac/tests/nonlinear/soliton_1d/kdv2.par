 &filelist
        base_filename='2ndsoliton'
        typefilelog='special'
    	convert_type='vtuBCCmpi'
        autoconvert=T
/

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        ditsave_log=1
        dtsave_dat=1.0d0
 /

 &stoplist
        time_max=10.0d0
 /

 &methodlist
        time_integrator = 'threestep'
        flux_scheme = 20*'tvdlf'
        limiter=20*'cada3'
 /

 &boundlist
        nghostcells=3
        typeboundary_min1 = 'periodic'
        typeboundary_max1 = 'periodic'
 /

 &meshlist
        refine_max_level=1
        refine_threshold=20*0.1d0
        block_nx1=10
        domain_nx1=600
        xprobmin1=-30.0d0
        xprobmax1=30.0d0
        iprob=1
 /

 &paramlist
       courantpar=0.4d0
       dtdiffpar=0.2d0
 /

 &nonlinear_list
        kdv_source_term = T
 /

 &kdv_list
       kdv_order=1
 /
