 &filelist
        base_filename='shock'
    	convert_type='vtuBCCmpi'
        autoconvert=T
/

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        ditsave_log=10
        dtsave_dat=0.01d0
 /

 &stoplist
        time_max=0.27d0
 /

 &methodlist
        time_integrator = 'threestep'
        flux_scheme = 20*'tvdlf'
        limiter=20*'cada3'
 /

 &boundlist
        typeboundary_min1 = 'cont'
        typeboundary_max1 = 'cont'
 /

 &meshlist
        refine_max_level=3
        refine_threshold=20*0.1d0
        block_nx1=10
        domain_nx1=100
        xprobmin1=-0.1d0
        xprobmax1=0.9d0
        iprob=2
 /

 &paramlist
       courantpar=0.9d0
 /

 &nonlinear_list
        nonlinear_flux_type=2
        kdv_source_term = F
 /
